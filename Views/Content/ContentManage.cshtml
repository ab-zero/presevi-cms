@{
    ViewBag.Title = "CMS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    Content Management System
</h2>

<div class="padding-top:20px;"></div>

@{
    if (ViewBag.mode == "return")
    {
        <p class="well">
            @ViewBag.ActionMessage

        </p>

        <div id="resultDiv" class="row">
            <div class="col-xs-6 col-xs-offset-3">


                <table class="table">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Value</th>
                        </tr>

                    </thead>
                    <tbody>

                        <tr>
                            <td>ContentType</td>
                            <td>@ViewBag.ModelContent.ContentType</td>
                        </tr>
                        <tr>
                            <td>Target Url</td>
                            <td>@ViewBag.ModelContent.TargetUrl</td>
                        </tr>
                        <tr>
                            <td>Image Url</td>
                            <td>@ViewBag.ModelContent.ImageUrl</td>
                        </tr>
                        <tr>
                            <td>Image Alt Text</td>
                            <td>@ViewBag.ModelContent.ImageAltText</td>
                        </tr>
                        <tr>
                            <td>Image Header</td>
                            <td>@ViewBag.ModelContent.ImageHeader</td>
                        </tr>
                        <tr>
                            <td>Description</td>
                            <td>@ViewBag.ModelContent.Description</td>


                    </tbody>
                </table>
            </div>
        </div>

        <p>Please select another content to manage.</p>
    }
}



<div class="row" style="margin-top:20px;">
    <div class="col-xs-12">
        <select id="contentTypeSel" class="select-content">
            <option value="top">Select a content to manage</option>
            <option value="banner">Banner</option>
            <option value="product-category">Product Category</option>
            <option value="product">Product</option>
            <option value="clientiele">Clientile</option>
        </select>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="btn-group" data-toggle="buttons">
            <label class="btn active">
                <input type="radio" name='manage' checked value="Create"><i class="fa fa-circle-o fa-2x"></i><i class="fa fa-check-circle-o fa-2x"></i><span> Create</span>
            </label>
            <label class="btn">
                <input type="radio" name='manage' value="Edit"><i class="fa fa-circle-o fa-2x"></i><i class="fa fa-check-circle-o fa-2x"></i><span> Edit</span>
            </label>
            <label class="btn">
                <input type="radio" name='manage' value="Delete"><i class="fa fa-circle-o fa-2x"></i><i class="fa fa-check-circle-o fa-2x"></i><span> Delete</span>
            </label>
        </div>
    </div>
</div>

<input type="button" id="btnManageContent" value="Click here to Manage Content" class="btn btn-info" />

<div id="contentPlaceHolder">


</div>
@section Scripts{


    <script>
        $(document).ready(function () {


            var contentType = null;
            var manageType = null;
            $('#contentTypeSel').show().change(function () {
                console.log(this.value);
                contentType = this.value;
                $('#manageOptionDiv').fadeIn('slow');
            });

            $('input:radio[name="manage"]').change(function () {
                manageType = this.value;
                console.log(manageType);
            });

            $('#btnManageContent').click(function () {
                contentType = $('#contentTypeSel').val();
                manageType = $('input:radio[name="manage"]:checked').val();
                $('#contentPlaceHolder').load('/content/' + manageType + '/' + contentType);
            });

        });


    </script>
}
