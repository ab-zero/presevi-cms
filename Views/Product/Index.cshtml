@*@model presevi_cms.Models.ProductDetailModel*@
@{
    ViewBag.Title = "Products List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" style="margin-top:20px;">
    <div class="product-title-container">
        <img src="/images/product-header/hospitality2.jpg" />
        <h2 class="title">Products List</h2>
    </div>


    <div class="product-page-content" style="margin: 10px; border-left: 10px solid rgb(0, 201, 255); padding: 10px;">
        Here is the list of all our products. We have manufactured products in various categories with innovation and Quality as our Mantra. Click on thumbnails to know more about our products.
    </div>

    <div class="row content-area">
        @{
            List<presevi_cms.Models.ProductDetailModel> lstProductDetail = (List<presevi_cms.Models.ProductDetailModel>)ViewBag.ProductDetailList;
            
                //ViewBag.ProductDetailList
            var productCategories = lstProductDetail.GroupBy(a => a.ProductCategory);
            
            foreach (var category in productCategories)
            {
                <h4 class="sub-title">Product Category: @category.Key</h4>
                foreach (var productDetail in category)
                {
                    <a href="/product/Detail/@productDetail.ProductSlug" class="col-lg-5ths col-md-6 col-sm-12 col-xs-12">
                        <div class="content-box content-four">
                            <img src="@productDetail.ImageUrl" class="img-responsive" />
                            <div class="content-desc">
                                <p class="desc-heading">@productDetail.ProductName</p>
                                <p class="desc-writeup">@productDetail.Description</p>
                            </div>
                        </div>
                    </a>
                }
                <div class="clearfix"></div>
                
            }
        }


    </div>
</div>

